    "version": "0.2.0",
    "configurations": [
        {
            "name": "search_engine",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}"
        },
        {
            "name": "migrations",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/database/migrations",
            "env":{
                "DATABASE_SERVER": "postgres://admin:S3cret@localhost:5432",
                "SEARCH_ENGINE_DATABASE": "search_engine"
            }
        }
    ]
}